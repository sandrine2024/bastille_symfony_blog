{% extends 'themes/base_admin.html.twig' %}

{% block title %}Liste des catégories{% endblock %}

{% block description %}Liste des catégories{% endblock %}

{% block keywords %}admin, liste, catégories{% endblock %}

{% block main %}

    <h1 class="text-center my-3 display-5">Liste des catégories</h1>

    <div class="d-flex justify-content-end align-items-center my-3">
        <a href="{{path('admin_category_create')}}" class="btn btn-primary shadow">Nouvelle catégorie</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover text-center table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Slug</th>
                    <th>Créé le</th>
                    <th>Modifié le</th>
                    <th>Options</th>
                </tr>
            </thead>
            <tbody>
                {% for category in categories %}
                    <td>{{category.id}}</td>
                    <td>{{category.name}}</td>
                    <td>{{category.slug}}</td>
                    <td>{{category.createdAt|format_date()}}</td>
                    <td>{{category.updatedAt|format_date()}}</td>
                    <td>
                        <a href="" class="btn btn-sm btn-secondary">Modifier</a>
                        <a href="" class="btn btn-sm btn-danger">Supprimer</a>
                    </td>
                    
                {% endfor %}
                
            </tbody>
        </table>
    </div>

{% endblock %}