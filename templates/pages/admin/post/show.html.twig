{% extends 'themes/base_admin.html.twig' %}

{% block title %}{{post.title}}{% endblock %}

{% block description %}{{post.title}}{% endblock %}

{% block keywords %}admin, article, show{% endblock %}

{% block main %}

    <div class="container">

        <div class="container my-3">
            {% if post.image %}
                <img class="img-fluid" src="{{ vich_uploader_asset(post, 'imageFile') }}" alt="{{ post.title }}">
            {% endif %}
        </div>

        <div class="container text-center">
            <h1 class=" my-3 display-5">{{post.title}}</h1>
            <small>Créé le <em>{{post.createdAt|format_date()}}</em></small> 
            {% if post.isPublished %}
                 | <small>Publié le <em>{{post.publishedAt|format_date()}}</em></small>
            {% else %}
                 | <small>Non publié</small>
            {% endif %}
        </div>

        <div class="container my-3">
            {{post.content|raw}}
        </div>
    </div>
{% endblock %}